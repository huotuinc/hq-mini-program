.evaluate-header {
  width: 100%;
  padding: 30rpx;
  font-size: 28rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}

.header-left {
  margin-right: 20rpx;
}

.header-left image {
  width: 120rpx;
  height: 120rpx;
}

.evaluate-title {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #888;
}

.evaluate-content textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  font-size: 28rpx;
}

.grade {
  background-color: #fff;
  margin-top: 2rpx;
  font-size: 28rpx;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.star .icon {
  font-size: 44rpx;
  margin-top: -14rpx;
}

.star  .icon-xingxingxuanzhong {
  color: #ffde00;
  font-size: 48rpx;
}

.weui-cells {
  margin-top: 0;
  padding: 0 30rpx;
}
