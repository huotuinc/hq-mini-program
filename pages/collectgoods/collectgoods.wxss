@import '../template/collect/collect-template.wxss';

.collect-footer {
  position: fixed;
  bottom: 0;
  height: 92rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  line-height: 92rpx;
  text-align: center;
  font-size: 30rpx;
}

.collect-footer view {
  width: 50%;
}

.select-footer_icon {
  padding-left: 30rpx;
  text-align: left;
  box-sizing: border-box;
  background-color: #fff;
}

.select-footer_icon .icon {
  font-size: 30rpx;
  margin-right: 10rpx;
  color: #ddd;
}

.select-footer_icon .icon-guanbi {
  color: #09bb06;
}

.footer-operate text {
  display: inline-block;
  width: 50%;
}

.footer-del {
  background-color: #f5f5f5;
  color: #333;
}

.footer-share {
  background-color: #e41436;
  color: #fff;
}
