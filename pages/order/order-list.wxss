.top-container {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;
  background-color: #fff;
}

.order-status-tab {
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  border-bottom: 1px solid #F0EFF5;
}

.order-status-tab .tab-item {
  width: 20%;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
}

.order-status-tab .tab-item.active {
  color: #e41436;
  position: relative;
}

.order-status-tab .tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100rpx;
  background: #e41436;
  position: absolute;
  transform: translate(25%);
  bottom: 0;
}

.separator2 {
  width: 100%;
  height: 80rpx;
}

.separator3 {
  height: 15rpx;
  border-bottom: 1px solid #F0EFF5;
  /* margin: 0 0 0 25rpx; */
}

.order-list-container {
  padding-bottom: 20rpx;
}

.order-item {
  margin-top: 20rpx;
  padding: 0rpx 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.item-info-1 {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #000;
  font-size: 28rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.item-info-2 {
  border: 1px solid #F0EFF5;
  display: flex;
  flex-direction: column;
}

.my-order_title {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 36rpx;
  font-size: 28rpx;
  color: #000;
  box-sizing: border-box;
  border-bottom: 1px solid #F0EFF5;
}

.my-order_con {
  background-color: #fafafa;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
}

.my-order_con image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.goods_title {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}

.title_con {
  width: 75%;
}

.title_con text {
  white-space: pre-wrap;
}

.price_num {
  width: 35%;
  display: flex;
  flex-direction: column;
  text-align: right;
}

.item-info-3 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.item-info-4 {
  margin-top: 20rpx;
  font-size: 28rpx;
}

.operation {
  overflow: hidden;
}

.operation view {
  float: right;
  border-radius: 10rpx;
  padding:4rpx 14rpx;
  margin-left: 10rpx;
}

.cancel {
  background-color: #f7f7f7;
  color: #454545;
  border: 1rpx solid #454545;
}

.payment {
  background-color: #e00003;
  color: #fff;
  border: 1rpx solid #e00003;
}
